---
import Layout from '../layouts/LayoutHome.astro';
---

<Layout title="Lead Frontend Developer | Glenn Jacobson">
    <main>
        <div class="home-intro">
            <h2 class="display-1">For the love <br>of the craft</h2>
            <p>A Frontend Developer who cares about performance, semantics, aesthetics, UX, and accessibility.</p>
        </div>
        <section class="work">
            <div>
                <img fetchpriority="low" decoding="async" src="/images/work/teds-category.webp" alt="Teds">
            </div>
            <div>
                <img fetchpriority="low" decoding="async" src="/images/work/highgrove-category.webp" alt="Highrove">
            </div>
            <div>
                <img fetchpriority="low" decoding="async" src="/images/work/pedders-category.webp" alt="Pedders">
            </div>
        </section>
    </main>
</Layout>

<style lang="scss" is:global>
    body:has(.work div:hover) {
        
        .home-intro,
        header {
            opacity: 0.5;
            scale: 0.95;
        }
    }
</style>
<style lang="scss">
    .work {
        display: none !important;
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        height: 50dvh;
        width: 48vw;
        max-width: 600px;

        div {
            height: 40dvh;
            width: 28vw;
            max-width: 400px;
            position: absolute;
            z-index: 1;
            overflow: hidden;
            transform: translateY(-50%);
            box-shadow: 25px 25px 75px -2px rgba(0, 0, 0, 0.45);
            transition: all 0.5s ease;
            transform-origin: top center;
                
            &:hover {
                transform: scale(1.1) translateY(-50%);
                max-width: min(80vw, 800px);
                width: 50vw;
                height: 50dvh;
                z-index: 2;
            }

            &:has(~ div:hover),
            &:hover ~ div {
                transform: scale(0.9) translateY(-50%);
            }

            &:nth-child(1) {
                top: 30%;
                right: 0;

                body:has(&:hover) {
                    background-color: oklch(0.97 0.1 97.27);
                }
            }

            &:nth-child(2) {
                top: 60%;
                right: 15%;

                body:has(&:hover) {
                    background-color: oklch(0.97 0.13 261.03);
                }
            }

            &:nth-child(3) {
                top: 90%;
                right: 30%;
                
                &:hover {
                    top: 75%;
                    right: 40%;
                }

                body:has(&:hover) {
                    background-color: oklch(0.97 0.21 28.65);
                }
            }

            img {
                max-width: 185%;
            }
        }
    }


    body {
        display: flex;
        flex-direction: column;
        transition: background-color 0.3s ease;
    }

    main {
        width: 100%;
        flex-grow: 1;
        display: flex;
        position: relative;
    }

    .home-intro {
        flex-shrink: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        transition: all 0.5s ease;
        width: 100%;

        h2,
        p {
            animation-name: enter;
            animation-fill-mode: forwards;
            opacity: 0;
            transform: translateX(130px);
            animation-duration: 0.5s;
        }

        p {
            max-width: 52rem;
            animation-delay: 0.05s;
        }
    }
</style>
